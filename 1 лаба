#include <stdio.h>

int main() {
    int t1, t2, t3;


    printf("Введіть три натуральних числа через пробіл: ");
    scanf("%d %d %d", &t1, &t2, &t3);


    float a = (1.0 / t1) + (1.0 / t2) + (1.0 / t3);
    float b = 1.0 / a;

    printf("Час, необхідний для з'їдання пирога: %.2f\n", b);

    return 0;
}
